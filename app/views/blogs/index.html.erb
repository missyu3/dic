<div class="form">
  <h1>ブログ一覧</h1>
  <table>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>投稿者</th>
      </tr>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog_path(blog.id) %></td>
        <td><%= blog.content %></td>
        <td><%= blog.user.name %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to '投稿', new_blog_path %>
</div>